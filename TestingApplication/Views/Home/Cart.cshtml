@model TestingApplication.Models.Home.CartViewModel

<div id="carttable">

    <table>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Subtotal</th>

        </tr>
        @{
            foreach (var item in Model.ShopperCart)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Subtotal</td>
                </tr>
            }
        }

    </table>
</div>

<br/>
<h2>YOUR TOTAL IS $@Model.Total</h2>
<button type="submit" asp-action="checkout">CHECKOUT</button>